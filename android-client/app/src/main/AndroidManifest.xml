<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="psm.mywallet.client.android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EntriesActivity"
            android:label="@string/title_activity_entries"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewEntryActivity"
            android:label="@string/title_activity_new_entry"
            android:parentActivityName=".EntriesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="psm.mywallet.client.android.EntriesActivity" />
        </activity>
    </application>

</manifest>